<div id="collapse<%= comment.id %>" class="panel-collapse collapse">
  <%= form_for([comment], remote: true) do |f| %>
    <div class="form-group">
      <%= f.text_area :content, class: "form-control" %>
    </div>
    <%= f.submit I18n.t(".Update"), class: "btn btn-warning xs" %>
  <% end %>
</div>
