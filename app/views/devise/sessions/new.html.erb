<div class="theme-layout">
  <div class="container-fluid pdng0">
    <div class="row merged">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="land-featurearea">
          <div class="land-meta">
            <h1>Winku</h1>
            <p>
              <%= I18n.t ".Life_is_short_and_the_world_is_wide" %>
              <br>
              <%= I18n.t ".Let_is_explore_the_world_together" %>
            </p>
            <div class="friend-logo">
              <span><%= image_tag "wink.png", alt: "logo" %></span>
            </div>
            <a href="#" title="" class="folow-me">Follow Us on</a>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="login-reg-bg">
          <div class="log-reg-area sign">
            <h2 class="log-title"><%= I18n.t ".Login"  %></h2>
              <p>
                <%= I18n.t ".Don’t_use_Winku_Yet?" %><a href="#" title=""><%= I18n.t ".Take_the_tour" %></a> or <a href="#" title="">
                  <%= I18n.t ".Join_now"%> </a>
              </p>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                <%= f.label :email, class: "control-label", for: "input" %>
                <i class="mtrl-select"></i>
              </div>
              <div class="form-group">
                <%= f.password_field :password,
                  autocomplete: "current-password" %>
                <%= f.label :password, class: "control-label", for: "input" %>
                <i class="mtrl-select"></i>
              </div>
              <div class="checkbox">
                <% if devise_mapping.rememberable? %>
                <label>
                <%= f.check_box :remember_me %>
                <i class="check-box"></i><%= I18n.t ".Always_Remember_Me" %>
                </label>
                <% end %>
              </div>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
              <% end %>
              <div class="#">
                <%= f.submit (I18n.t ".Login"), class: "btn btn-primary" %>
                <button class="btn btn-primary signup" type="button">
                  <span><%= I18n.t ".Register" %></span></button>
              </div>
            <% end %>
          </div>
          <div class="log-reg-area reg">
            <h2 class="log-title"><%= I18n.t ".Register" %></h2>
              <p>
                <%= I18n.t ".Don’t_use_Winku_Yet?" %><a href="#" title="">
                  <%= I18n.t ".Take_the_tour" %></a> or <a href="#" title="">
                  <%= I18n.t ".Join_now"%></a>
              </p>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true,
                  autocomplete: "email" %>
                <label class="control-label" for="input">Email</label><i class="mtrl-select"></i>
              </div>
              <div class="form-group">
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password" %>
                <label class="control-label" for="input">Password</label><i class="mtrl-select"></i>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                <label class="control-label" for="input">Confirmation</label><i class="mtrl-select"></i>
              </div>
              <div class="checkbox">
                <label>
                <input type="checkbox" checked="checked"/><i class="check-box"></i><%= I18n.t ".Accept_Terms_&_Conditions_?" %>
                </label>
              </div>
              <a href="#" title="" class="already-have">
                <%= I18n.t ".Already_have_an_account" %></a>
              <div class="submit-btns">
                <%= f.submit I18n.t(".Sign_up"), class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
