<div class="col-lg-6">
  <div class="central-meta">
    <div class="editing-info">
      <h5 class="f-title"><i class="ti-info-alt"></i><%= I18n.t ".edit_profile" %></h5>
      <%= form_for @user do |f| %>
        <div class="form-group half">
          <%= f.text_field :name, class: "form-control" %>
          <%= f.label :name, class: "control-label", for: "input" %><i class="mtrl-select"></i>
        </div>
        <div class="form-group">
          <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png" %>
        </div>
        <div class="form-group">
          <%= image_tag @user.avatar.url if @user.avatar? %>
        </div>
        <div class="submit-btns">
          <%= f.submit I18n.t(".Update"), class: "btn btn-primary"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
