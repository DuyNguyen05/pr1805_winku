 <div class="central-meta">
  <div class="user-post">
    <div class="friend-info">
      <figure>
        <%= image_tag post.user.image.image_link.to_s if post.user.image.present? %>
      </figure>
      <div class="top-area">
        <ul class="main-menu">
          <div class="friend-name">
            <ins><%= link_to post.user.name, "#" %></ins>
            <span><%= t("text.published") %>: <%= time_ago_in_words(post.created_at) %></span>
          </div>
        </ul>
        <ul class="main-menu" >
          <li>
            <a href="#" title="Setting" data-toggle="dropdown"></a>
            <ul>
              <li><%= link_to t("button.edit_post"), edit_post_path(post), remote: true %></li>
              <li><%= link_to t("button.delete"), post, method: :delete, data: {confirm: t("text.confirm")} %></li>
            </ul>
          </li>
        </ul>
      </div>
      <div class="post-meta">
        <div class="description">
          <p>
           <%= post.content %>
          </p>
        </div>
        <%= image_tag post.image.image_link.to_s if post.image.present? %>
        <div class="we-video-info">
          <ul>
            <li>
              <span class="views" data-toggle="tooltip" title="" data-original-title="views">
                <i class="fa fa-eye"></i>
                <ins></ins>
              </span>
            </li>
            <li>
              <span class="comment" data-toggle="tooltip" title="" data-original-title="Comments">
                <i class="fa fa-comments-o"></i>
                <ins></ins>
              </span>
            </li>
            <li>
              <span class="like" data-toggle="tooltip" title="" data-original-title="like">
                <i class="ti-heart"></i>
                <ins></ins>
              </span>
            </li>
            <li>
              <span class="dislike" data-toggle="tooltip" title="" data-original-title="dislike">
                <i class="ti-heart-broken"></i>
                <ins></ins>
              </span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
