<div class="col-lg-6 float-left">
  <div class="central-meta">
    <div class="editing-info">
      <h5 class="f-title"><i class="ti-lock"></i>
        <%= I18n.t ".Change_your_password" %></h5>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            <%= f.label :email, class: "control-label" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "new-password" %>
            <%= f.label :password, class: "control-label" %><i class="mtrl-select"></i>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            <%= f.label :password_confirmation, class: "control-label" %><i class="mtrl-select"></i>
          </div>
          <div class="form-group">
            <%= f.password_field :current_password, autocomplete:
              "current-password" %>
            <%= f.label :current_password, class: "control-label" %><i class="mtrl-select"></i>
          </div>
          <div class="submit-btns">
            <%= f.submit I18n.t(".Update"), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="col-lg-6 float-left">
  <h3> <%= I18n.t ".Cancel_my_account" %></h3>
    <p><%= I18n.t ".Unhappy?" %><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class:"btn btn-danger", method: :delete %>
    </p>
    <%= link_to I18n.t(".Back"), root_url, class: "btn btn-primary btn-sm" %>
</div>
