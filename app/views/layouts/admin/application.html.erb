<!DOCTYPE html>
<html>
  <head>
    <title>Admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "admin/application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "admin/application", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <div id="main-wrapper" data-sidebartype="full">
      <%= render "layouts/admin/header" %>
      <%= render "layouts/admin/sidebar" %>
      <div class="page-wrapper">
        <% if notice %>
          <p class="notice"><%= notice %></p>
        <% elsif alert %>
          <p class="alert"><%= alert %></p>
        <% end %>
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <%= yield %>
            </div>
          </div>
        </div>
        <%= render "layouts/admin/footer" %>
      </div>
    </div>
    <script>
      $('#zero_config').DataTable();
    </script>
  </body>
</html>
